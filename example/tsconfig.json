{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@cxptek/tp-sdk": ["../lib/typescript/src/index.d.ts"],
      "@cxptek/tp-sdk/*": ["../lib/typescript/src/*"]
    },
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["react", "react-native", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "ios", "android"]
}

